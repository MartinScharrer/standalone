% \begin{macro}{\includestandalone@}[3]{<filename>.<graphic ext>}{<filename>}{<options>}
%% 0 = PDF if exists, TEX otherwise
%% 1 = force TEX
%% 2 = force PDF
%% 3 = build PDF if not exists
%% 4 = build PDF if older than TEX
%    \begin{macrocode}
\def\includestandalone@#1#2#3{%
    \ifcase\sa@mode
    \relax% 0
        \IfFileExists{#1}%
            {\includegraphics[#3]{#1}}%
            {\includegraphics[#3]{#2.tex}}%
    \or% 1
        \includegraphics[#3]{#2.tex}%
    \or% 2
        \includegraphics[#3]{#1}%
    \or% 3
        \IfFileExists{#1}%
            {\includegraphics[#3]{#1}}%
            {\sa@buildgraphic{#2}%
             \ifsa@buildsuccess
                \includegraphics[#3]{#1}%
             \else
                \PackageWarning{standalone}%
                 {Graphic '#1' could not be build.^^J%
                  Shell escape activated?}%
                 \includegraphics[#3]{#2.tex}%
             \fi
            }%
    \or% 4
        \filemodCmp{#2.tex}{#1}%
            {\sa@buildgraphic{#2}%
             \ifsa@buildsuccess
                \includegraphics[#3]{#1}%
             \else
                \PackageWarning{standalone}%
                 {Graphic '#1' could not be build.^^J%
                  Shell escape activated?}%
                 \includegraphics[#3]{#2.tex}%
             \fi
            }%
            {%
                \PackageInfo{standalone}%
                    {#2.tex file newer then #1}%
                \includegraphics[#3]{#1}%
            }%
    \fi
}
%    \end{macrocode}
% \end{macro}
